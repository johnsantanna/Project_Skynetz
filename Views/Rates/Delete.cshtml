@model Project_Skynetz.Models.Rate

@{
    ViewData["Title"] = "Excluir Tarifa";
}

<style>
    .card-custom {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .main-title {
        color: white;
        text-shadow: 0 0 20px rgba(239, 68, 68, 0.5);
    }

    .alert-danger-custom {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid #ef4444;
        border-radius: 12px;
        color: #b91c1c;
    }

    .info-row {
        background: rgba(239, 68, 68, 0.05);
        border-left: 4px solid #ef4444;
        padding: 1rem 1.5rem;
        border-radius: 8px;
        margin-bottom: 0.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .info-label {
        color: #6b7280;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .info-value {
        color: #1f2937;
        font-size: 1.1rem;
    }

    .btn-danger-custom {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        box-shadow: 0 4px 15px rgba(239, 68, 68, 0.4);
        transition: all 0.3s ease;
    }

    .btn-danger-custom:hover {
        background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
        box-shadow: 0 6px 20px rgba(239, 68, 68, 0.6);
        transform: translateY(-2px);
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            
            <div class="text-center mb-5">
                <h1 class="fw-light mb-3 main-title" style="letter-spacing: 1px;">
                    <i class="bi bi-trash"></i> Excluir Tarifa
                </h1>
            </div>

            <div class="card border-0 shadow-lg card-custom">
                <div class="card-body p-5">
                    
                    <div class="alert alert-danger-custom text-center mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill fs-2 d-block mb-2"></i>
                        <h5 class="mb-0">Tem certeza que deseja excluir esta tarifa?</h5>
                        <small>Esta ação não pode ser desfeita.</small>
                    </div>

                    <div class="info-row">
                        <span class="info-label">DDD Origem:</span>
                        <span class="info-value">@Model.OriginCode</span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">DDD Destino:</span>
                        <span class="info-value">@Model.DestinationCode</span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Preço por Minuto:</span>
                        <span class="info-value">R$ @Model.PricePerMinute.ToString("F2")</span>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger-custom text-white px-4 py-2 rounded-3 flex-grow-1">
                                <i class="bi bi-trash"></i> Confirmar Exclusão
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 py-2 rounded-3">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
