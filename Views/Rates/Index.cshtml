@model IEnumerable<Project_Skynetz.Models.Rate>

@{
    ViewData["Title"] = "Tarifas";
}

<style>
    .card-custom {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .main-title {
        color: white;
        text-shadow: 0 0 20px rgba(255, 107, 53, 0.5);
    }

    .btn-success-custom {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border: none;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.4);
        transition: all 0.3s ease;
    }

    .btn-success-custom:hover {
        background: linear-gradient(135deg, #059669 0%, #047857 100%);
        box-shadow: 0 6px 20px rgba(16, 185, 129, 0.6);
        transform: translateY(-2px);
    }

    .table-custom {
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

    .table-custom thead {
        background: linear-gradient(135deg, #2d1b69 0%, #1a0f3d 100%);
        color: white;
    }

    .table-custom tbody tr:hover {
        background: rgba(99, 102, 241, 0.05);
    }

    .badge-ddd {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-size: 0.9rem;
    }

    .price-tag {
        color: #10b981;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        flex-wrap: nowrap;
    }

    .action-buttons .btn {
        white-space: nowrap;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            
            <div class="text-center mb-5">
                <h1 class="fw-light mb-3 main-title" style="letter-spacing: 1px;">
                    <i class="bi bi-currency-dollar"></i> Gerenciamento de Tarifas
                </h1>
            </div>

            <div class="card border-0 shadow-lg card-custom">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0">Tarifas Cadastradas</h5>
                        <a asp-action="Create" class="btn btn-success-custom text-white px-4 py-2 rounded-3">
                            <i class="bi bi-plus-circle"></i> Nova Tarifa
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover table-custom mb-0">
                            <thead>
                                <tr>
                                    <th class="text-center">DDD Origem</th>
                                    <th class="text-center">DDD Destino</th>
                                    <th class="text-center">Preço por Minuto</th>
                                    <th class="text-center" style="width: 280px;">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                        @foreach (var item in Model) {
                                <tr>
                                    <td class="text-center align-middle">
                                        <span class="badge-ddd text-white">@item.OriginCode</span>
                                    </td>
                                    <td class="text-center align-middle">
                                        <span class="badge-ddd text-white">@item.DestinationCode</span>
                                    </td>
                                    <td class="text-center align-middle">
                                        <span class="price-tag">R$ @item.PricePerMinute.ToString("F2")</span>
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="action-buttons">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary rounded-2">
                                                <i class="bi bi-pencil"></i> Editar
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info rounded-2">
                                                <i class="bi bi-eye"></i> Detalhes
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-2">
                                                <i class="bi bi-trash"></i> Excluir
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                        }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center mt-3">
                            <i class="bi bi-info-circle"></i> Nenhuma tarifa cadastrada ainda.
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
