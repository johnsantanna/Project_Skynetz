<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skynetz FaleMais</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project_Skynetz.styles.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(135deg, #2d1b69 0%, #1a0f3d 50%, #0d0621 100%);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
            margin: 0;
            padding: 0;
        }

        .stars {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
        }

        .star {
            position: absolute;
            width: 2px;
            height: 2px;
            background: white;
            border-radius: 50%;
            animation: twinkle 3s infinite;
        }

        @@keyframes twinkle {
            0%,
            100% {
                opacity: 0.3;
            }

            50% {
                opacity: 1;
            }
        }

        .header-top {
            background: rgba(13, 6, 33, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(99, 102, 241, 0.2);
            padding: 1.5rem 0;
        }

        .navbar-brand {
            color: white !important;
            font-weight: 600;
            font-size: 1.8rem;
            letter-spacing: 1px;
            text-shadow: 0 0 20px rgba(99, 102, 241, 0.6);
            margin: 0;
        }

        .navbar-menu {
            background: rgba(13, 6, 33, 0.9);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(99, 102, 241, 0.3);
            padding: 0;
            position: relative;
            z-index: 1000;
        }

        .navbar-menu .container-fluid {
            padding: 0;
        }

        .navbar-menu .navbar-nav {
            width: 100%;
            display: flex;
            justify-content: flex-start;
            gap: 0;
        }

        .nav-link-custom {
            color: rgba(255, 255, 255, 0.85) !important;
            padding: 1rem 2rem !important;
            margin: 0;
            transition: all 0.3s ease;
            position: relative;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.95rem;
            border-bottom: 3px solid transparent;
        }

        .nav-link-custom:hover {
            background: rgba(99, 102, 241, 0.15);
            color: white !important;
            border-bottom-color: #6366f1;
        }

        .nav-link-custom.active {
            background: rgba(99, 102, 241, 0.25);
            color: white !important;
            border-bottom-color: #ff6b35;
        }

        .nav-link-custom.disabled {
            opacity: 0.4;
            cursor: not-allowed;
        }

        .nav-link-custom i {
            font-size: 1.1rem;
        }

        .badge-orange {
            background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
            color: white;
            padding: 0.2rem 0.5rem;
            border-radius: 4px;
            font-size: 0.65rem;
            margin-left: 0.3rem;
        }

        .dropdown-menu {
            background: rgba(13, 6, 33, 0.98);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(99, 102, 241, 0.3);
            margin-top: 0;
            border-radius: 0 0 8px 8px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        .dropdown-item {
            color: rgba(255, 255, 255, 0.8);
            transition: all 0.2s ease;
            padding: 0.8rem 1.5rem;
        }

        .dropdown-item:hover {
            background: rgba(99, 102, 241, 0.2);
            color: white;
        }

        .dropdown-item i {
            margin-right: 0.5rem;
            width: 20px;
        }

        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }

        .content-wrapper {
            position: relative;
            z-index: 1;
            min-height: calc(100vh - 200px);
        }

        footer {
            background: rgba(13, 6, 33, 0.9);
            backdrop-filter: blur(10px);
            border-top: 1px solid rgba(99, 102, 241, 0.3);
            color: rgba(255, 255, 255, 0.6);
            padding: 1.5rem 0;
            margin-top: 3rem;
            position: relative;
            z-index: 1;
        }

        footer a {
            color: #6366f1;
            text-decoration: none;
        }

        footer a:hover {
            color: #818cf8;
        }

        @@media (max-width: 768px) {
            .navbar-menu .navbar-nav {
                flex-direction: column;
            }

            .nav-link-custom {
                border-bottom: none;
                border-left: 3px solid transparent;
            }

            .nav-link-custom:hover {
                border-left-color: #6366f1;
            }
        }
    </style>
</head>

<body>
    <div class="stars" id="stars"></div>

    <div class="header-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/">
                <i class="bi bi-stars"></i> Skynetz FaleMais
            </a>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-menu">
        <div class="container-fluid">
            <button class="navbar-toggler ms-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                style="border-color: rgba(255,255,255,0.3);">
                <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link-custom" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-fill"></i> Home
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link-custom dropdown-toggle" href="#" role="button">
                            <i class="bi bi-gear-fill"></i> Configuração
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Rates" asp-action="Index">
                                <i class="bi bi-currency-dollar"></i> Tarifas
                            </a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link-custom dropdown-toggle" href="#" role="button">
                            <i class="bi bi-calculator-fill"></i> Sistema
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Calculator" asp-action="Index">
                                <i class="bi bi-calculator"></i> Calculadora
                            </a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-custom disabled">
                            <i class="bi bi-person-circle"></i> Perfil
                            <span class="badge-orange">EM BREVE</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container content-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container text-center">
            <p class="mb-0">&copy; 2025 Skynetz FaleMais - Todos os direitos reservados</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function createStars() {
            const starsContainer = document.getElementById('stars');
            const starCount = 150;

            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 3 + 's';
                star.style.opacity = Math.random() * 0.7 + 0.3;
                starsContainer.appendChild(star);
            }
        }

        createStars();

        // Força dropdown automático no hover
        document.addEventListener('DOMContentLoaded', function () {
            const dropdowns = document.querySelectorAll('.nav-item.dropdown');

            dropdowns.forEach(dropdown => {
                dropdown.addEventListener('mouseenter', function () {
                    const menu = this.querySelector('.dropdown-menu');
                    if (menu) {
                        menu.classList.add('show');
                    }
                });

                dropdown.addEventListener('mouseleave', function () {
                    const menu = this.querySelector('.dropdown-menu');
                    if (menu) {
                        menu.classList.remove('show');
                    }
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
